#include <iostream>
using namespace std;

int main()
{
    int n, num;
    cout << "Enter number of elements" << endl;
    cin >> n;
    int arr[n];
    cout << "Enter " << n << " sorted elements (in ascending order)" << endl;
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    cout << "Enter the number to search: ";
    cin >> num;
    int a = 0, b = n - 1;
    bool found = false;
    while (a <= b) {
        int mid = (a + b) / 2;
        if (arr[mid] == num) {
            found = true;
            cout << "Number found at position " << mid << endl;
            break;
        } else if (arr[mid] < num) {
            a = mid + 1;
        } else {
            b = mid - 1;
        }
    }
    return 0;
}
