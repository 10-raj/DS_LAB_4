#include<iostream>
using namespace std;

int main() {
    int n, target;
    cout << "Enter the size of array" << endl;
    cin >> n;
    int arr[n];
    cout << "Enter the elements of array" << endl;
    for(int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    cout << "Enter the number to search" << endl;
    cin >> target;
    for(int i = 0; i < n; i++) {
        if(arr[i] == target) {
            cout << "Number found at index " << i << endl;
            return 0;
        }
    }
    cout << "Number not found in the array" << endl;
}
